<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VaultUnsealPoc.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VaultUnsealPoc.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="VaultUnsealPoc"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Login" Command="{Binding LoginCommand}"></Button>
            <Button Content="Logout" Command="{Binding LogoutCommand}"></Button>
        </StackPanel>
        <Label Content="Token info"></Label>
        <TextBox Text="{Binding TokenInfo}" Margin="20" MinHeight="200" IsReadOnly="True"></TextBox>
        <Label Content="Yubikey"></Label>
        <TextBox Text="{Binding Yubikey}" Margin="20" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>